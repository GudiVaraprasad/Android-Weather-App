<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_back"
    tools:context=".RatingApp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="402dp"
        android:layout_height="114dp"
        android:gravity="center_horizontal"
        android:text="We hope you enjoyed your weather and our app together !!"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058"
        tools:ignore="MissingConstraints" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="5"
        android:stepSize="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.074"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tvRatingScale"
        android:layout_width="277dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="108dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Awesome. Loved it!"
        android:textColor="#8BC34A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.016"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="249dp"
        android:layout_height="48dp"
        android:background="#e57373"
        android:text="Submit"
        android:textColor="#3E2723"
        app:backgroundTint="#8BC34A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etFeedback"
        app:layout_constraintVertical_bias="0.164"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/etFeedback"
        android:layout_width="369dp"
        android:layout_height="85dp"
        android:gravity="top"
        android:hint="Tell us what you liked.."
        android:inputType="textMultiLine"
        android:lines="5"
        android:textColor="#FFFFFF"
        android:textColorHint="#939191"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRatingScale"
        app:layout_constraintVertical_bias="0.152"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>